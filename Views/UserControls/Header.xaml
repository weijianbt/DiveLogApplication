<UserControl x:Class="DiveLog.Views.UserControls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiveLog.Views.UserControls"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="60" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Content="{Binding WelcomeMessage}" Grid.Column="0"/>
            <Label Content="{Binding CurrentDatetime}" Grid.Column="1" HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</UserControl>
